<h1>List of Blogs</h1>

<table>
 <tr>
  <th>Title</th>
  <th>Contents</th>
 </tr>

<% @blogs.each do |blog| %>
 <tr>
  <td><%= blog.title %></td>
  <td><%= blog.content %></td>
  <td><%= link_to 'Check the detail', blog_path(blog.id) %></td>
  <td><%= link_to "Edit blog", edit_blog_path(blog.id) %></td>
 </tr>
 <% end %>
 </table>

 <%= link_to 'Write a new blog', new_blog_path %>